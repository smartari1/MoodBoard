# MoodB Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ============================================
# DATABASE (MongoDB Atlas - Production Only)
# ============================================
# Single production database - no local/dev databases
# Get connection string from MongoDB Atlas Dashboard
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/moodb?retryWrites=true&w=majority"

# ============================================
# AUTHENTICATION (NextAuth.js)
# ============================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Debug logging (set to "true" only when debugging auth issues - logs sensitive data!)
AUTH_DEBUG="false"

# ============================================
# STORAGE (Google Cloud Storage)
# ============================================
# GCP Project ID
GCP_PROJECT_ID="moodboard-476922"

# GCP Storage Bucket Name
GCP_BUCKET_NAME="moodb-assets"

# GCP Public URL for assets (auto-generated: https://storage.googleapis.com/{bucket_name})
GCP_PUBLIC_URL="https://storage.googleapis.com/moodb-assets"

# GCP Service Account Key (JSON string)
# For local development: Set GOOGLE_APPLICATION_CREDENTIALS to point to key file
# For production (Vercel): Paste the entire JSON key as a string (minified, no newlines)
# Example: {"type":"service_account","project_id":"...","private_key":"..."}
GCP_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"moodboard-476922","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"moodb-storage@moodboard-476922.iam.gserviceaccount.com"}'

# ============================================
# IMAGE CDN (ImageKit)
# ============================================
# ImageKit provides fast image delivery with automatic optimization
# Sign up at: https://imagekit.io
# Configure GCS as external storage origin in ImageKit dashboard

# ImageKit URL Endpoint (e.g., https://ik.imagekit.io/your_imagekit_id)
# Leave empty to disable ImageKit and use original GCS URLs
NEXT_PUBLIC_IMAGEKIT_URL_ENDPOINT=""

# GCP Bucket name (for client-side URL transformation)
NEXT_PUBLIC_GCP_BUCKET_NAME="moodb-assets"

# ============================================
# CDN (Cloudflare)
# ============================================
CLOUDFLARE_ZONE_ID="your_zone_id"
CLOUDFLARE_API_TOKEN="your_api_token"

# ============================================
# AI & CONTENT GENERATION (Google Gemini)
# ============================================
# Gemini API Key for AI content and image generation
# Get your API key from: https://makersuite.google.com/app/apikey
# Free tier: 15 requests/min for text, limited image generation
# Paid tier: Higher rate limits, more image generation quota
GEMINI_API_KEY="your_gemini_api_key_here"

# Alternative: Use GOOGLE_AI_API_KEY (alias for Gemini)
# GOOGLE_AI_API_KEY="your_gemini_api_key_here"

# ============================================
# SEARCH (Meilisearch)
# ============================================
MEILISEARCH_HOST="http://localhost:7700"
MEILISEARCH_MASTER_KEY="your_master_key"

# ============================================
# CACHE (Upstash Redis)
# ============================================
UPSTASH_REDIS_REST_URL="your_redis_url"
UPSTASH_REDIS_REST_TOKEN="your_redis_token"

# ============================================
# MONITORING & ANALYTICS
# ============================================
# Sentry
NEXT_PUBLIC_SENTRY_DSN="your_sentry_dsn"
SENTRY_AUTH_TOKEN="your_sentry_auth_token"
SENTRY_ORG="your_org"
SENTRY_PROJECT="moodb"

# PostHog
NEXT_PUBLIC_POSTHOG_KEY="your_posthog_key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Logtail
LOGTAIL_SOURCE_TOKEN="your_logtail_token"

# ============================================
# SECURITY
# ============================================
# Cloudflare Turnstile
NEXT_PUBLIC_TURNSTILE_SITE_KEY="your_turnstile_site_key"
TURNSTILE_SECRET_KEY="your_turnstile_secret_key"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW="1m"

# ============================================
# APPLICATION
# ============================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Brand Colors (MoodB)
NEXT_PUBLIC_BRAND_BACKGROUND="#f7f7ed"
NEXT_PUBLIC_BRAND_PRIMARY="#df2538"
NEXT_PUBLIC_BRAND_TEXT="#000000"
NEXT_PUBLIC_BRAND_TEXT_INVERSE="#ffffff"

# Default Locale
NEXT_PUBLIC_DEFAULT_LOCALE="he"

# ============================================
# WEBHOOKS
# ============================================
WEBHOOK_SECRET="your_webhook_secret"

# ============================================
# PAYMENTS (Optional - for future)
# ============================================
# STRIPE_SECRET_KEY="sk_test_your_stripe_key"
# STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_key"
# STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

