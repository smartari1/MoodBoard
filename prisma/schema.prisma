// MoodB Database Schema
// MongoDB with Prisma

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


enum PriceTier {
  AFFORDABLE
  LUXURY
}

enum PriceLevel {
  REGULAR
  LUXURY
}

enum ImageCategory {
  ROOM_OVERVIEW
  ROOM_DETAIL
  MATERIAL
  TEXTURE
  COMPOSITE
  ANCHOR
}

enum GenerationStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

type StyleGalleryItem {
  id                 String   @default(uuid())
  url                String
  type               String   // 'scene', 'material', 'color'
  
  // For Scenes
  sceneName          String?  // 'entry', 'living', 'dining', 'kitchen', 'master_bed', 'bath'
  complementaryColor String?  // e.g., "#800020" (Bordeaux)
  
  // For Materials/Colors
  linkedAssetId      String?  @db.ObjectId // Ref to Material.id or Color.id
  
  // Metadata
  prompt             String?
  createdAt          DateTime @default(now())
}

type RoomView {
  id           String           @default(uuid())
  url          String?          // Nullable if pending
  orientation  String           // 'main', 'opposite', 'left', 'right'
  prompt       String?
  status       GenerationStatus @default(PENDING)
  createdAt    DateTime         @default(now())
}

// ============================================
// Multi-tenancy & Authentication
// ============================================

model Organization {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  slug String @unique

  settings     OrganizationSettings?
  subscription Subscription?

  // Relations
  users     User[]
  clients   Client[]
  projects  Project[]
  styles    Style[]
  materials Material[]
  textures  Texture[]  // Phase 2: Texture entities
  products  Product[]
  colors    Color[]
  auditLogs AuditLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@index([name])
  @@map("organizations")
}

type OrganizationSettings {
  locale   String @default("he") // he, en, ar
  currency String @default("ILS") // ILS, USD, EUR
  units    String @default("metric") // metric, imperial

  brand    BrandSettings?
  features FeatureFlags?
}

type BrandSettings {
  logo            String?
  primaryColor    String  @default("#df2538") // MoodB Red
  secondaryColor  String?
  backgroundColor String  @default("#f7f7ed") // MoodB Cream
}

type FeatureFlags {
  aiAssist          Boolean @default(false)
  advancedBudgeting Boolean @default(false)
}

type Subscription {
  plan       String // free, pro, enterprise
  validUntil DateTime
  seats      Int      @default(1)
  stripeId   String?
}

// NextAuth.js required models
model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expires])
  @@map("sessions")
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// MoodB User model (extends NextAuth User)
model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?

  organizationId String?       @db.ObjectId
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  role        String? // designer_owner, designer_member, client, supplier, admin
  permissions String[]

  profile UserProfile?

  lastActive DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())

  // NextAuth relations
  accounts Account[]
  sessions Session[]

  // MoodB relations
  createdProjects      Project[]            @relation("CreatedProjects")
  teamMemberships      TeamMember[]
  comments             Comment[]
  approvals            Approval[]
  inspirationLibraries InspirationLibrary[]

  @@index([organizationId])
  @@map("users")
}

type UserProfile {
  firstName   String
  lastName    String
  email       String
  phone       String?
  avatar      String?
  preferences UserPreferences?
}

type UserPreferences {
  language      String                @default("he")
  notifications NotificationSettings?
}

type NotificationSettings {
  email Boolean @default(true)
  push  Boolean @default(true)
  inApp Boolean @default(true)
}

// ============================================
// CRM & Client Management
// ============================================

model Client {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  organizationId String       @db.ObjectId
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  name        String
  contact     ContactInfo
  tags        String[]
  preferences ClientPreferences?
  notes       Note[]

  // Relations
  projects Project[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@index([organizationId])
  @@index([name])
  @@map("clients")
}

type ContactInfo {
  email   String
  phone   String?
  address String?
  city    String?
  country String?
}

type ClientPreferences {
  favoriteStyles String[]
  colors         String[]
  materials      String[]
  budgetRange    BudgetRange?
  specialNeeds   String?
}

type BudgetRange {
  min Float
  max Float
}

type Note {
  id        String   @default(uuid())
  content   String
  createdBy String
  createdAt DateTime @default(now())
}

// ============================================
// Project Management
// ============================================

model Project {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  organizationId String       @db.ObjectId
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  clientId String @db.ObjectId
  client   Client @relation(fields: [clientId], references: [id])

  name   String
  slug   String
  status String // draft, active, review, approved, completed, archived

  styleConfig StyleConfig?
  rooms       Room[]
  budget      Budget?
  timeline    Timeline?

  team                 TeamMember[]
  approvals            Approval[]
  comments             Comment[]
  assets               Asset[]
  inspirationLibraries InspirationLibrary[]

  metadata ProjectMetadata

  createdBy String @db.ObjectId
  creator   User   @relation("CreatedProjects", fields: [createdBy], references: [id])

  @@index([organizationId])
  @@index([organizationId, status])
  @@index([clientId])
  @@index([createdBy])
  @@index([slug])
  @@map("projects")
}

type ProjectMetadata {
  createdBy      String   @db.ObjectId
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now())
  lastModifiedBy String   @db.ObjectId
}

type StyleConfig {
  baseStyleId    String               @db.ObjectId
  customizations StyleCustomization[]
}

type StyleCustomization {
  roomId        String?
  paletteId     String?
  materialSetId String?
}

type Room {
  id             String              @default(uuid())
  name           String
  type           String              // Living, Kitchen, Bedroom, Bath, etc.
  parentCategory String?             // "Private", "Public", "Commercial"
  dimensions     Dimensions?
  notes          String?
  images         String[]            @default([]) // Array of R2 image URLs
  styleOverrides StyleOverride?
  materials      MaterialReference[]
  products       ProductReference[]
}

type Dimensions {
  length Float?
  width  Float?
  height Float?
  unit   String? @default("m")
}

type StyleOverride {
  paletteId     String?
  materialSetId String?
  customColors  String[]
}

type MaterialReference {
  materialId String  @db.ObjectId
  usageArea  String
  quantity   Float
  unit       String
  finish     String?
}

type ProductReference {
  productId String  @db.ObjectId
  quantity  Int
  variant   String?
}

type Budget {
  currency  String
  target    BudgetRange
  allocated Float           @default(0)
  spent     Float           @default(0)
  lines     BudgetLine[]
  versions  BudgetVersion[]
}

type BudgetLine {
  id        String         @default(uuid())
  scope     LineScope
  itemRef   ItemReference?
  quantity  Float
  unit      String
  unitPrice Float
  wastePct  Float?         @default(0)
  total     Float
}

type LineScope {
  roomId   String?
  category String
}

type ItemReference {
  materialId String? @db.ObjectId
  productId  String? @db.ObjectId
}

type BudgetVersion {
  version   Int
  createdAt DateTime @default(now())
  createdBy String   @db.ObjectId
  snapshot  Json
}

type Timeline {
  startDate     DateTime
  targetEndDate DateTime
  milestones    Milestone[]
}

type Milestone {
  id          String   @default(uuid())
  title       String
  date        DateTime
  status      String // pending, completed
  description String?
}

type TeamMember {
  userId      String   @db.ObjectId
  role        String // lead, designer, consultant
  permissions String[]
  addedAt     DateTime @default(now())
}

type Asset {
  id         String   @default(uuid())
  type       String // image, document, moodboard
  url        String
  filename   String
  size       Int
  uploadedBy String   @db.ObjectId
  uploadedAt DateTime @default(now())
}

// ============================================
// Color Catalog
// ============================================

model Color {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  organizationId String?       @db.ObjectId
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  name        LocalizedString
  description LocalizedString? // Description for designers - what this color is used for
  hex         String          @unique // Global unique identifier
  pantone     String?
  category    String          // neutral, accent, semantic
  role        String?         // primary, secondary, success, warning, error (for semantic colors)

  usage Int @default(0) // How many styles use this color

  styles Style[] // Styles that use this color

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@index([organizationId])
  @@index([organizationId, category])
  @@index([category])
  @@map("colors")
}

// ============================================
// Style Engine - Categories
// ============================================

model Category {
  id          String            @id @default(auto()) @map("_id") @db.ObjectId
  name        LocalizedString
  description LocalizedString? // Optional description for the category
  slug        String            @unique
  order       Int               @default(0) // For sorting
  images      String[]          @default([]) // Array of R2 image URLs

  // Enhanced detailed content
  detailedContent LocalizedDetailedContent?

  subCategories SubCategory[]
  styles        Style[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@index([order])
  @@map("categories")
}

model SubCategory {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  categoryId String   @db.ObjectId
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  name        LocalizedString
  description LocalizedString? // Optional description for the subcategory
  slug        String
  order       Int              @default(0) // For sorting within category
  images      String[]         @default([]) // Array of R2 image URLs

  // Enhanced detailed content
  detailedContent LocalizedDetailedContent?

  styles Style[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@unique([categoryId, slug])
  @@index([categoryId])
  @@index([categoryId, order])
  @@map("sub_categories")
}

// ============================================
// Style Engine
// ============================================

model Style {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  organizationId String?       @db.ObjectId
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  slug        String          @unique
  name        LocalizedString
  description LocalizedString? // Simple description field

  // Belongs to Category, SubCategory, Approach, and has a specific Color
  categoryId    String    @db.ObjectId
  category      Category  @relation(fields: [categoryId], references: [id])
  subCategoryId String    @db.ObjectId
  subCategory   SubCategory @relation(fields: [subCategoryId], references: [id])
  approachId    String    @db.ObjectId
  approach      Approach  @relation(fields: [approachId], references: [id])
  colorId       String    @db.ObjectId
  color         Color     @relation(fields: [colorId], references: [id])

  // Phase 2: Category & Price Level
  roomCategory      String?    // "Private", "Public", "Commercial"
  priceLevel        PriceLevel @default(REGULAR)
  compositeImageUrl String?    // Composite mood board image
  anchorImageUrl    String?    // Anchor image (fruit on color palette)

  priceTier   PriceTier @default(AFFORDABLE)
  gallery     StyleGalleryItem[]

  // Enhanced detailed content
  detailedContent LocalizedDetailedContent?

  // Rooms for this style (inspiration page)
  roomProfiles RoomProfile[]

  // Phase 2: Relations
  images        StyleImage[]    // New: Categorized images
  textureLinks  StyleTexture[]  // New: Many-to-many with textures (join model)

  metadata StyleMetadata

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@index([organizationId])
  @@index([categoryId])
  @@index([subCategoryId])
  @@index([approachId])
  @@index([categoryId, subCategoryId, approachId])
  @@index([colorId])
  @@index([priceLevel])
  @@index([roomCategory])
  @@map("styles")
}

// Phase 2: Categorized Images for Styles
model StyleImage {
  id          String         @id @default(auto()) @map("_id") @db.ObjectId
  styleId     String         @db.ObjectId
  style       Style          @relation(fields: [styleId], references: [id], onDelete: Cascade)

  url              String
  imageCategory    ImageCategory @default(ROOM_OVERVIEW)
  displayOrder     Int           @default(0)
  description      String?
  tags             String[]      @default([])
  roomType         String?       // e.g., "living", "kitchen", "bedroom"

  // Link to Texture entity (for TEXTURE category images)
  textureId   String?   @db.ObjectId
  texture     Texture?  @relation(fields: [textureId], references: [id])

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())

  @@index([styleId])
  @@index([styleId, imageCategory])
  @@index([textureId])
  @@index([displayOrder])
  @@map("style_images")
}

type LocalizedString {
  he String
  en String
}

// Enhanced content for detailed descriptions
type LocalizedDetailedContent {
  he DetailedContent
  en DetailedContent
}

type DetailedContent {
  introduction    String?   // Brief overview/opening paragraph (פתיח)
  description     String?   // Full detailed description
  period          String?   // Time period (e.g., "1920-1939", "עתיק–היום")
  characteristics String[]  // Key characteristics and features
  visualElements  String[]  // Visual elements and aesthetics
  philosophy      String?   // Design philosophy (for approaches)
  colorGuidance   String?   // Color palette and usage guidance
  materialGuidance String?  // Material preferences and recommendations
  applications    String[]  // Common applications and use cases
  historicalContext String? // Historical background and evolution
  culturalContext String?   // Cultural influences and significance
  poeticIntro     PoeticIntro? // Poetic/artistic introduction for styles
  
  executiveSummary  String?   // Part B
  requiredMaterials String[]  // Raw list from AI
  requiredColors    String[]  // Raw list from AI
}

type PoeticIntro {
  title      String  // Main title for the poetic section
  subtitle   String  // Subtitle/tagline
  paragraph1 String  // First paragraph - harmony/unity
  paragraph2 String  // Second paragraph - color/nature
  paragraph3 String  // Third paragraph - form/philosophy
  paragraph4 String  // Fourth paragraph - integration/synthesis
  keywords   String? // Optional keywords/tags for SEO
}

type MaterialSet {
  defaults     MaterialDefault[]
  alternatives MaterialAlternative[]
}

type MaterialDefault {
  materialId String @db.ObjectId
}

type MaterialAlternative {
  usageArea    String
  alternatives String[] @db.ObjectId
}

type RoomProfile {
  roomTypeId            String                    @db.ObjectId
  description           LocalizedString?
  colorPalette          RoomColorPalette?
  materials             RoomMaterial[]
  furnitureAndFixtures  RoomFurniture[]
  lighting              RoomLighting?
  spatialConsiderations RoomSpatialConsiderations?
  decorativeElements    RoomDecorativeElement[]
  designTips            RoomDesignTip[]
  views                 RoomView[]
}

type RoomColorPalette {
  primaryId    String?  @db.ObjectId  // References Color.id (optional for backward compatibility)
  secondaryIds String[] @db.ObjectId  // References Color.id[]
  accentIds    String[] @db.ObjectId  // References Color.id[]
  description  LocalizedString?
}

type RoomMaterial {
  materialId  String           @db.ObjectId  // References Material.id
  application LocalizedString?
  finish      String?  // e.g. "natural", "matte", "textured", "glossy"
}

type RoomFurniture {
  item        LocalizedString
  description LocalizedString?
  importance  String?  // "high", "medium", "low"
}

type RoomLighting {
  natural    LocalizedString?
  artificial RoomLightingFixture[]
}

type RoomLightingFixture {
  type        LocalizedString
  description LocalizedString?
}

type RoomSpatialConsiderations {
  layout          LocalizedString?
  circulation     LocalizedString?
  functionalZones RoomFunctionalZone[]
}

type RoomFunctionalZone {
  zone    LocalizedString
  purpose LocalizedString?
}

type RoomDecorativeElement {
  element LocalizedString
  role    LocalizedString?
}

type RoomDesignTip {
  tip LocalizedString
}

model Approach {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  slug  String @unique
  name  LocalizedString
  order Int    @default(0)

  description LocalizedString?
  images      String[] @default([])

  // Enhanced detailed content
  detailedContent LocalizedDetailedContent?

  // Inspiration Pillars = Colors/Shades (גוונים / צבעים) - from flow diagram
  inspirationPillars InspirationPillars?

  // One approach has many styles
  styles Style[]

  metadata ApproachMetadata

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@index([order])
  @@map("approaches")
}

type InspirationPillars {
  colors String[] @db.ObjectId // References to Color IDs (shades/colors palette)
  shades String[] @db.ObjectId // Additional shade references if needed
}

type ApproachMetadata {
  isDefault Boolean @default(false)
  version   String  @default("1.0.0")
  tags      String[]
  usage     Int     @default(0)
}

// AI Selection metadata for tracking AI-generated style decisions
type AISelection {
  approachConfidence Float           // AI's confidence in approach selection (0.0-1.0)
  reasoning          LocalizedString // Why this approach/color combination was chosen
}

type StyleMetadata {
  version         String
  isPublic        Boolean   @default(false)
  approvalStatus  String? // null, 'pending', 'approved', 'rejected'
  approvedBy      String?   @db.ObjectId
  approvedAt      DateTime?
  rejectionReason String?
  tags            String[]
  usage           Int       @default(0)
  rating          Float?

  // AI Generation tracking
  aiGenerated     Boolean?     @default(false)
  aiSelection     AISelection?
  isComplete      Boolean?     @default(false) // Tracks if all room profiles are generated
}

// Room Types for managing available room categories
model RoomType {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  slug        String @unique
  name        LocalizedString
  description LocalizedString?
  icon        String?
  order       Int @default(0)

  // Enhanced detailed content
  detailedContent LocalizedDetailedContent?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@index([order])
  @@map("room_types")
}

// ============================================
// Material & Product Catalog
// ============================================

model MaterialCategory {
  id          String            @id @default(auto()) @map("_id") @db.ObjectId
  name        LocalizedString
  description LocalizedString?
  slug        String            @unique
  order       Int               @default(0)
  icon        String?           // Icon name or URL

  types MaterialType[]
  materials Material[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@index([order, slug])
  @@map("material_categories")
}

model MaterialType {
  id               String            @id @default(auto()) @map("_id") @db.ObjectId
  categoryId        String            @db.ObjectId
  category          MaterialCategory  @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  name        LocalizedString
  description LocalizedString?
  slug        String
  order       Int               @default(0)
  icon        String?           // Icon name or URL

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@unique([categoryId, slug])
  @@index([categoryId, order])
  @@map("material_types")
}

model Material {
  id             String         @id @default(auto()) @map("_id") @db.ObjectId
  organizationId String?        @db.ObjectId  // Null for global materials
  organization   Organization?  @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  sku      String?         @unique
  isAbstract      Boolean          @default(false)
  generationStatus GenerationStatus @default(COMPLETED)
  aiDescription   String?

  name     LocalizedString
  categoryId String        @db.ObjectId
  category MaterialCategory @relation(fields: [categoryId], references: [id])

  properties   MaterialProperties
  pricing      Pricing
  availability Availability
  assets       MaterialAssets

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@index([organizationId])
  @@index([organizationId, categoryId])
  @@index([categoryId])
  @@map("materials")
}

// ============================================
// Phase 2: Texture Catalog (Similar to Materials)
// ============================================

model TextureCategory {
  id          String            @id @default(auto()) @map("_id") @db.ObjectId
  name        LocalizedString   // e.g., { he: "גימורי קיר", en: "Wall Finishes" }
  description LocalizedString?
  slug        String            @unique
  order       Int               @default(0)
  icon        String?

  types    TextureType[]
  textures Texture[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@index([order, slug])
  @@map("texture_categories")
}

model TextureType {
  id          String            @id @default(auto()) @map("_id") @db.ObjectId
  name        LocalizedString   // e.g., { he: "מט", en: "Matte" }
  description LocalizedString?
  categoryId  String            @db.ObjectId
  category    TextureCategory   @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  slug        String
  order       Int               @default(0)

  textures Texture[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@unique([categoryId, slug])
  @@index([categoryId, order])
  @@map("texture_types")
}

model Texture {
  id             String           @id @default(auto()) @map("_id") @db.ObjectId
  organizationId String?          @db.ObjectId  // Null for global textures
  organization   Organization?    @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // Basic Info
  name           LocalizedString  // e.g., { he: "מט לבן", en: "Matte White" }
  description    LocalizedString? // Usage description

  // Categorization
  categoryId     String           @db.ObjectId
  category       TextureCategory  @relation(fields: [categoryId], references: [id])
  typeId         String?          @db.ObjectId
  type           TextureType?     @relation(fields: [typeId], references: [id])

  // Properties
  finish         String           // 'matte', 'glossy', 'satin', 'rough', 'smooth'
  sheen          String?          // 'flat', 'eggshell', 'semi-gloss', 'high-gloss'
  baseColor      String?          // HEX color if applicable

  // AI Generation
  isAbstract     Boolean          @default(false)  // AI-generated vs. real product
  generationStatus GenerationStatus @default(COMPLETED)
  aiDescription  String?          // AI-generated description

  // Assets
  imageUrl       String?          // Primary texture image
  thumbnailUrl   String?          // Thumbnail
  tags           String[]         @default([])

  // Usage tracking
  usage          Int              @default(0)  // How many styles use this texture

  // Relations
  styleLinks     StyleTexture[]   // Many-to-many with styles (join model)
  styleImages    StyleImage[]     // Images using this texture

  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @default(now())

  @@index([organizationId])
  @@index([categoryId, typeId])
  @@index([finish])
  @@index([usage])
  @@map("textures")
}

// Join model for Style-Texture many-to-many relationship
model StyleTexture {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  styleId   String  @db.ObjectId
  style     Style   @relation(fields: [styleId], references: [id], onDelete: Cascade)
  textureId String  @db.ObjectId
  texture   Texture @relation(fields: [textureId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([styleId, textureId])
  @@index([styleId])
  @@index([textureId])
  @@map("style_textures")
}

type MaterialProperties {
  typeId    String   // Reference to MaterialType ID
  subType   String   // Free text sub-type (e.g., "Oak", "Marble")
  finish    String[]
  texture   String
  colorIds  String[]  @db.ObjectId // Array of Color IDs
  dimensions MaterialDimensions?
  technical TechnicalSpecs
}

type MaterialDimensions {
  width     Float?
  height    Float?
  thickness Float?
  unit      String @default("mm")
}

type TechnicalSpecs {
  durability      Int // 1-10
  maintenance     Int // 1-10
  sustainability  Int // 1-10
  fireRating      String?
  waterResistance Boolean?
}

type Pricing {
  cost          Float
  retail        Float
  unit          String // sqm, unit, linear_m
  currency      String
  bulkDiscounts DiscountTier[]
}

type DiscountTier {
  minQuantity Int
  discount    Float
}

type Availability {
  inStock    Boolean
  leadTime   Int // days
  minOrder   Float
}

type MaterialAssets {
  thumbnail      String
  images         String[]
  texture        String?
  technicalSheet String?
}

model Product {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  organizationId String?       @db.ObjectId
  organization   Organization? @relation(fields: [organizationId], references: [id])

  sku      String          @unique
  category String
  name     LocalizedString

  variants     ProductVariant[]
  dimensions   ProductDimensions
  pricing      Pricing
  availability Availability
  assets       ProductAssets

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@index([organizationId])
  @@index([organizationId, category])
  @@map("products")
}

type ProductVariant {
  id              String  @default(uuid())
  name            String
  sku             String
  color           String?
  material        String?
  priceAdjustment Float   @default(0)
}

type ProductDimensions {
  length Float
  width  Float
  height Float
  weight Float?
  unit   String @default("cm")
}

type ProductAssets {
  thumbnail String
  images    String[]
  model3D   String?
  manual    String?
}

// ============================================
// Inspiration Library
// ============================================

model InspirationLibrary {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  projectId String?  @db.ObjectId // null = user-level, value = project-level
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  name String // "My Inspiration" or project name
  type String // 'user' | 'project'

  items InspirationItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@unique([userId, projectId]) // One library per user-project combo
  @@index([userId])
  @@index([projectId])
  @@map("inspiration_libraries")
}

type InspirationItem {
  id          String   @default(uuid())
  type        String // 'room' | 'style' | 'palette' | 'material' | 'image'
  referenceId String?  @db.ObjectId // ID of the referenced item
  data        Json? // Snapshot/embed data
  notes       String?
  tags        String[]
  savedAt     DateTime @default(now())
}

// ============================================
// Collaboration & Approvals
// ============================================

model Approval {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  projectId String  @db.ObjectId
  project   Project @relation(fields: [projectId], references: [id])

  scope      String // style, budget, materials, final
  versionRef String
  status     String // pending, approved, rejected

  approvedBy String @db.ObjectId
  approver   User   @relation(fields: [approvedBy], references: [id])

  comments   String?
  approvedAt DateTime?

  createdAt DateTime @default(now())

  @@index([projectId])
  @@index([projectId, status])
  @@index([approvedBy])
  @@map("approvals")
}

model Comment {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  projectId String  @db.ObjectId
  project   Project @relation(fields: [projectId], references: [id])
  roomId    String?

  content     String
  attachments String[]

  authorId String @db.ObjectId
  author   User   @relation(fields: [authorId], references: [id])

  parentId String? @db.ObjectId

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@index([projectId])
  @@index([projectId, roomId])
  @@index([authorId])
  @@index([parentId])
  @@map("comments")
}

// ============================================
// Audit & Logging
// ============================================

model AuditLog {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  organizationId String       @db.ObjectId
  organization   Organization @relation(fields: [organizationId], references: [id])

  actorId  String @db.ObjectId
  action   String // created, updated, deleted, approved, etc.
  entity   String // project, client, style, etc.
  entityId String @db.ObjectId

  before Json?
  after  Json?

  ipAddress String?
  userAgent String?

  createdAt DateTime @default(now())

  @@index([organizationId])
  @@index([organizationId, entity])
  @@index([actorId])
  @@index([organizationId, createdAt])
  @@map("audit_logs")
}

// ============================================
// Translation Management
// ============================================

model Translation {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  key   String @unique // Dot notation: pagename.componentname.actualkey

  valueHe String @db.String // Hebrew translation
  valueEn String @db.String // English translation

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("translations")
}

// ============================================
// AI Seed Executions
// ============================================

model SeedExecution {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  executedAt DateTime @default(now())
  executedBy String?  @db.ObjectId // User who ran the seed
  completedAt DateTime? // When it finished

  // Configuration used
  config SeedConfig

  // Results
  result      SeedResult
  stats       SeedStats
  errors      SeedError[]

  // Generated styles with admin links
  generatedStyles GeneratedStyleReference[]

  // Performance metrics
  duration      Int?   // Total seconds
  estimatedCost Float  // USD
  actualCost    Float? // If available from API metrics

  // Status tracking
  status String // 'running' | 'completed' | 'failed' | 'stopped'
  error  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([executedAt])
  @@index([status])
  @@index([executedBy])
  @@map("seed_executions")
}

type SeedConfig {
  limit                  Int?
  categoryFilter         String?
  subCategoryFilter      String?
  generateImages         Boolean
  generateRoomProfiles   Boolean
  roomTypeFilter         String[]
  dryRun                 Boolean
  manualMode             Boolean?
  approachId             String?
  colorId                String?
}

type SeedResult {
  success Boolean
  message String?
}

type SeedStats {
  totalSubCategories     Int
  alreadyGenerated       Int
  pendingBeforeSeed      Int
  created                Int
  updated                Int
  skipped                Int
  errorsCount            Int
}

type SeedError {
  entity  String
  error   String
}

type GeneratedStyleReference {
  styleId        String
  slug           String
  name           LocalizedString
  subCategoryId  String
  subCategory    String // Name for display
  approachId     String
  approach       String // Name for display
  colorId        String
  color          String // Name for display
  adminEditUrl   String // /admin/styles/{id}/edit
  publicViewUrl  String // /styles/{slug}
}
